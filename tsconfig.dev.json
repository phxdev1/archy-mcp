{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "outDir": "build",
    "declaration": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "checkJs": false,
    "allowJs": true,
    "rootDir": ".",
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*", "examples/**/*.ts", "test/**/*.ts", "*.ts"],
  "exclude": ["node_modules", "build"]
}